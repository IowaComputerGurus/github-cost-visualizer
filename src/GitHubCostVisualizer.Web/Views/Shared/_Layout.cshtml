<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

    <title>@ViewData["Title"] - Github Cost Visualizer</title>

    <!-- Stylesheets -->
    <link href="/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="/css/Chart.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="/css/style.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="/css/all.min.css" rel="stylesheet" type="text/css" asp-append-version="true">

    <!-- Javascript -->
    <script type="text/javascript" src="/js/jquery.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/jquery.validate.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/additional-methods.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/clipboard.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/highlight.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/dataTables.dataTables.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/dataTables.responsive.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/responsive.bootstrap4.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/Chart.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="/js/gradstopUMD.js" asp-append-version="true"></script>
    <script type="module" src="/js/time-elements.js"></script>
    <script type="text/javascript" src="/js/scripts.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Header", false)
</head>
<body>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-G25TVL4TTW"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-G25TVL4TTW');
        
        function trackUpload() {
            gtag('event', 'upload', {
                'event_category': 'upload',
                'event_label': 'upload'
            });
        }
    </script>
    <nav class="navbar icg-navbar bg-white row m-0">
        <div class="navbar-header">

        </div>
        <button type="button" class="d-none navbar-toggle collapsed" data-toggle="collapse" data-target="#icg-navbar-collapse" aria-expanded="false"><i class="navbar-toggle-icon"></i></button>
        <div class="col p-0 d-flex justify-content-between navbar-dropdowns">
            <ul class="navbar-right d-flex ml-auto">
                <li class="dropdown">
                    <a href="/">
                        <i class="fas fa-undo"></i>&nbsp;&nbsp;Start Over
                    </a>
                </li>
                <li class="dropdown user-controls">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdownUserLink" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="hidden-md" style="padding-left: 9px;"><i class="fas fa-user"></i>&nbsp;&nbsp;About/Help</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownUserLink">
                        <li class="dropdown-item">
                            <a href="https://www.iowacomputergurus.com">
                                Visit IowaComputerGurus, Inc.
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a href="https://github.com/IowaComputerGurus/github-cost-visualizer/issues">
                                Report a Bug/Request Feature
                            </a>
                        </li>
                        <li class="divider"></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="icg-content">
        <div class="page-header">
            <div class="row">
                <div class="col-md-4">
                    <h1 id="page-heading"><i class="page-header-icon fas @ViewData["Header-Icon"]"></i>@ViewData["Header-Title"]</h1>
                </div>
                <div class="col-md-auto ml-md-auto mt-1 mt-md-0">


                    @await RenderSectionAsync("headerButtons", false)
                </div>
            </div>
        </div>

        <!-- Start Page Content -->
        @RenderBody()
        <!-- End Page Content -->
    </div>
    <footer class="icg-footer icg-footer-bottom">
        <div class="d-flex align-items-center">
            <span class="text-muted">Copyright &copy; @DateTime.Now.Year IowaComputerGurus, Inc. - Version @System.Reflection.Assembly.GetEntryAssembly()?.GetName().Version.ToString(3)</span>
            <environment exclude="Production">
                <div class="alert alert-warning ml-1">Non-Production</div>
            </environment>
        </div>
    </footer>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

